<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">University Forum</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <% if (user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/posts">Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <form class="d-inline" action="/auth/logout" method="post">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Register</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-5">
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <small>Category: <%= post.Category.name %></small><br>
    <small>Posted by: <%= post.User.firstName %> <%= post.User.lastName %></small>
    <hr>
    <h3>Comments</h3>
    <ul class="list-group">
        <% comments.forEach(comment => { %>
            <li class="list-group-item">
                <p><%= comment.content %></p>
                <small>Posted by: <%= comment.User.firstName %> <%= comment.User.lastName %></small>
                <br>
                <small>On: <%= new Date(comment.createdAt).toLocaleString() %></small>
            </li>
        <% }) %>
    </ul>
</div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
